{% extends 'base.html.twig' %}

{% block title %}tag_show{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>Tag</h2>
        <ul>
            <ul>
                <li>{{ tag.name }}</li>
                {% for article in tag.articles %}
                    <ul>
                        <li>
                            <a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
                        </li>
                    </ul>
                {% endfor %}
            </ul>
        </ul>
    </div>
{% endblock %}